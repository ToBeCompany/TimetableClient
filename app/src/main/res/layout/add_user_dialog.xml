<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/typeNewUser"
        android:paddingLeft="8sp"
        android:paddingRight="8sp"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32sp"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:foreground="@drawable/frame"
        android:minHeight="50sp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/id_user"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:hint="@string/id"
        android:layout_marginTop="24sp"
        app:layout_constraintEnd_toEndOf="@+id/typeNewUser"
        app:layout_constraintStart_toStartOf="@+id/typeNewUser"
        app:layout_constraintTop_toBottomOf="@+id/typeNewUser" />

    <CheckBox
        android:id="@+id/auto_generation_checkbox"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:text="@string/auto_generation"
        app:layout_constraintEnd_toEndOf="@+id/typeNewUser"
        app:layout_constraintStart_toStartOf="@+id/typeNewUser"
        app:layout_constraintTop_toBottomOf="@+id/id_user" />
