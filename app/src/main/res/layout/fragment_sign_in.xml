<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6AB6F1"
    tools:context=".auth.SignInFragment">

    <EditText
        android:id="@+id/codetext_signInFragment"
        android:maxLength="50"
        android:padding="10sp"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_edittext"
        android:textSize="16sp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="@string/sigining_code"
        android:inputType="textPersonName"
        android:textColorHint="#30437E"
        android:textColor="#30437E"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="230dp"
        android:layout_height="155dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/rotor_text_logo"
        app:layout_constraintBottom_toTopOf="@+id/codetext_signInFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>